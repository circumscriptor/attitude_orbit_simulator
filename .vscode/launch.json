{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Launch",
            "program": "${workspaceFolder}/build/attitude_orbit_simulator",
            "args": [
                "--output=${workspaceFolder}/build/simulation_1e6s.csv",
                "--mass=1300",
                "--width=0.1",
                "--height=0.1",
                "--length=0.1",
                "--magnet-remanence=1.2",
                "--magnet-diameter=0.005",
                "--magnet-length=0.020",
                "--rod-volume=8.0e-8",
                "--rod-orientation=1,0,0",
                "--rod-orientation=-1,0,0",
                "--rod-orientation=0,1,0",
                "--rod-orientation=0,-1,0",
                "--hysteresis-ms=600000",
                "--hysteresis-a=8.0",
                "--hysteresis-k=4.0",
                "--hysteresis-c=0.05",
                "--hysteresis-alpha=1.0e-5",
                "--orbit-semi-major-axis=6871000",
                "--orbit-inclination=1.658063",
                "--orbit-eccentricity=0.001",
                "--angular-velocity=0.0,0.0,0.0",
                "--simulation-year=2026.0",
                "--t-end=1e6",
                "--dt=0.1",
                "--checkpoint-interval=0",
                "--absolute-error=1e-12",
                "--relative-error=1e-12"
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}
